<section class="vh-100 bg-light">
  <div class="mask d-flex align-items-center h-100 gradient-custom-3">
    <div class="container h-100">
      <div class="row d-flex justify-content-center align-items-center h-100">
        <div class="col-12 col-md-9 col-lg-7 col-xl-6">
          <div class="card" style="border-radius: 15px;">
            <div class="card-body p-5">
              <h2 class="text-uppercase text-center mb-5">Create an account</h2>

              <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

                <div class="form-outline mb-4">
                  <%= f.text_field :firstname, autofocus: true, autocomplete: "firstname", placeholder:"First name", id:"form3Example1cg", class:"form-control form-controll-lg" %><br><br>
                  <%= f.text_field :lastname, autofocus: true, autocomplete: "firstname", placeholder:"Last name",class:"form-control" %>
                </div>

                <div class="form-outline mb-4">
                  <%= f.text_field :username, autofocus: true, autocomplete: "username",placeholder:"Username", id:"form3Example1cg" ,class:"form-control form-control-lg" %>
                </div>

                <div class="form-outline mb-4">
                <%= f.email_field :email, autofocus: true, autocomplete: "email",placeholder:"email",class:"form-control form-control-lg" %>
                </div>

                <div class="form-outline mb-4">
        <%= f.select(:career_id, Career.all.collect {|u| [u.field, u.id]}, {:prompt => 'Select your career'},{class: "form-control",data: {"live-search": true}}) %><br><br>
                </div>

                <div class="form-outline mb-4">
                 <%= f.password_field :password, autocomplete: "new-password",placeholder:"Password",class:"form-control form-control-lg" %>
                </div>
<div class="form-outline mb-4">
                  <%= f.password_field :password_confirmation, autocomplete: "new-password",placeholder:"Confirm password",class:"form-control form-control-lg" %>
                </div>
               

                <div class="d-flex justify-content-center">
                  <%= f.submit "Sign up",class:"btn btn-primary btn-block btn-lg gradient-custom-4 text-white" %><br><br>
                </div>

                <p class="text-center text-muted mt-5 mb-0">Have already an account? <%= link_to  "Login here.", new_user_session_path, class:"fw-bold text-body"%>

              <%end%>

            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>