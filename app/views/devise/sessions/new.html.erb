
<div class="container">
    <div class="row px-md-9 my-3">
      <div class="col px-md-9 py-5 shadow-sm border">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <h2 class="text-muted align-center d-flex justify-content-center">Login</h2><br>
      <div class="field">
        <%= f.text_field :login, autofocus: true, autocomplete: "email", placeholder:"Email or Username", class:"form-control form-control-lg" %>
      </div><br><br>
    
      <div class="field">
        <%= f.password_field :password, autocomplete: "current-password", placeholder:"password", class:"form-control form-control-lg" %>
      </div><br>
    
      <% if devise_mapping.rememberable? %>
        <div class="field">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div><br>
      <% end %>
    
      <div class="actions">
        <%= f.submit "Log in", class:"btn btn-primary w-100" %>
    <%       %>
      </div>
      </div>
      <% end %>
        </div>
      </div>
    </div>
</div>