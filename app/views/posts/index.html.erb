<div class="container gedf-wrapper">
  <div class="row">
    <div class="col-md-3">
      <div class="card">
        <div class="card-body">
          
        </div>
        <ul class="list-group list-group-flush">
          <li class="list-group-item">
            <div class="h6 text-muted">Followers</div>
            <div class="h5"><%= current_user.followers.count %></div>
          </li>
          <li class="list-group-item">
            <div class="h6 text-muted">Following</div>
            <div class="h5">
              <%=current_user.following.count%>
            </div>
          </li>
          
        </ul>
      </div>
    </div>
    <div class="col-md-6 gedf-main">

      <div class="card gedf-card">
        <div class="card-header">
          <ul class="nav nav-wrapper card-header-tabs" id="myTab" role="tablist">
            <li class="nav-item">
              <a class="nav-link active" id="posts-tab" data-toggle="tab" href="#posts" role="tab" aria-controls="posts" aria-selected="true">Feeds</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" id="images-tab" data-toggle="tab" role="tab" aria-controls="images" aria-selected="false" href="#images">Your posts</a>
            </li>
          </ul>
        </div>
        <div class="card-body">
          <div class="tab-content" id="myTabContent">
            <div class="tab-pane fade show active" id="posts" role="tabpanel" aria-labelledby="posts-tab">
              <button type="button" class="btn btn-light w-100 justify-content-start" data-toggle="modal" data-target="#exampleModal">
                Post here
              </button>
              <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                <div class="modal-dialog modal-dialog-centered modal-lg" role="document">
                  <div class="modal-content">
                    <div class="modal-header">
                      <h5 class="modal-title" id="exampleModalLabel">Post here</h5>

                      <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                      </button>
                    </div>
                    <div class="modal-body">
                      <%= form_for Post.new, :url => posts_path(), :method => :post do |f| %>
                      <%= f.rich_text_area :content, placeholder: "Post here", class:"form-control" %><br>
                      <%= f.select(:career_id, Career.all.collect {|u| [u.field, u.id]}, {:prompt => 'Tag to a career'},{class: "form-control selectpicker",data: {"live-search": true}}) %><br><br>
                      <%= f.select :skill_id, options_for_select(Skill.all.collect{ |u| [u.name, u.id] }), {prompt:"Tag to skill"}, {class: "form-control selectpicker", data: {"live-search": true}}%><br>
                    </div>
                    <div class="modal-footer">
                      <%= button_tag( :class => "btn btn-primary w-100 btn-lg") do %>
                        <i class="fas fa-comment-alt"></i> Post
                      <% end %>
                    </div>
                    <%end%>

                  </div>
                </div>
              </div>

            </div>
            <div class="tab-pane fade" id="images" role="tabpanel" aria-labelledby="images-tab">
              <div class="form-group">
                <%current_user.posts.each do |post|%>
                    <div class="card gedf-card border shadow-sm my-2">
                    <div class="card-header">
                      <div class="d-flex justify-content-between align-items-center">
                        <div class="d-flex justify-content-between align-items-center">
                          <div class="mr-2">
                            <%= link_to user_path(post.user), :action => 'go' do %>
                              <%= image_tag user_avatar(post.user), class:"border rounded-circle", width:"45"%>
                            <%end%>
                          </div>
                          <div class="ml-2">
                            <div class="h5 m-0"><%= link_to post.user.username, user_path(post.user) %></div>
                            <div class="h7 text-muted"><%= post.career.field %></div>
                          </div>
                        </div>
                        <div>
                          
                        </div>
                      </div>
            
                    </div>
                    <div class="card-body">
                      <div class="text-muted h7 mb-2"> <i class="fa fa-clock-o"></i><%= post.created_at.strftime("%Y-%m-%d") %></div>
                     
                      <p class="card-text">
                        <%= link_to simple_format(post.content).truncate(200), post_path(post), class:"text-black" %>          
                      </p>
                    </div>
                    <div class="card-footer">
                      <a href="#" class="card-link"><i class="fa fa-gittip"></i> Like</a>
                      <a href="#" class="card-link"><i class="fa fa-comment"></i> Comment</a>
                      <a href="#" class="card-link"><i class="fa fa-mail-forward"></i> Share</a>
                    </div>
                  </div>
                <%end%>
              </div>
              <div class="py-4"></div>
            </div>
          </div>
          <div class="btn-toolbar justify-content-between">
            
          </div>
        </div>
      </div>

      <%@career_posts.each do |c|%>
      <div class="card gedf-card border shadow-sm my-2">
        <div class="card-header">
          <div class="d-flex justify-content-between align-items-center">
            <div class="d-flex justify-content-between align-items-center">
              <div class="mr-2">
                <%= link_to user_path(c.user), :action => 'go' do %>
                  <%= image_tag user_avatar(c.user), class:"border rounded-circle", width:"45"%>
                <%end%>
              </div>
              <div class="ml-2">
                <div class="h5 m-0"><%= link_to c.user.username, user_path(c.user) %></div>
                <div class="h7 text-muted"><%= c.career.field %></div>
              </div>
            </div>
            <div>
              
            </div>
          </div>

        </div>
        <div class="card-body">
          <div class="text-muted h7 mb-2"> <i class="fa fa-clock-o"></i><%= c.created_at.strftime("%Y-%m-%d") %></div>
         
          <p class="card-text">
            <%= link_to simple_format(c.content), post_path(c), class:"text-black" %>          
          </p>
        </div>
        <div class="card-footer">
          <a href="#" class="card-link"><i class="fa fa-gittip"></i> Like</a>
          <a href="#" class="card-link"><i class="fa fa-comment"></i> Comment</a>
          <a href="#" class="card-link"><i class="fa fa-mail-forward"></i> Share</a>
        </div>
      </div>
      <%end%>
   
    </div>
  
  </div>
</div>

<form>
    <select class="form-control" data-toggle="select" title="Simple select" data-live-search="true" data-live-search-placeholder="Search ...">
        <option>Alerts</option>
        <option>Badges</option>
        <option>Buttons</option>
        <option>Cards</option>
        <option>Forms</option>
        <option>Modals</option>
    </select>
</form>