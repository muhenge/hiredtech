<%= form_for Post.new, :url => posts_path(), :method => :post do |f| %>
    <%= f.text_area :content, placeholder: "Post here" %>
    <%= f.label :field, "Tag to" %>
  <%= f.collection_select(:career_id, Career.all, :id, :field, :prompt => 'Select your title', class:"form-select") %>    <%= f.submit "Post",class:"btn post-btn" %>
<%end%>