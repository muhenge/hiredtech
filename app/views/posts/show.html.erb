    <div class="container">
    <div class="row">
        <div class="col-md-8 col-xl-6  post-show border-righ">
          <%= simple_format(@post.content) %>
        </div>
        <div class="col-md-4 col-xl-6"><div class="blog-comment">
				<h3 class="text-success"><%= @post.comments.count %> Comments</h3>
            <div class="col-md-12 d-flex justify-content-center">
    <button type="button" class="comment-btn w-50" data-toggle="modal" data-target="#comment">
                   <i class="fas fa-comment-dots"></i> Add a comment
    </button>
    <div class="modal fade" id="comment" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLongTitle">Add a comment</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
          <%= form_with model: [@post, @comment], local: true do |f| %>
          <%= f.text_area :text, placeholder: "Add your comment", class:"w-100 text",cols: 15, rows: 15 %>
      </div>
      <div class="modal-footer">
      <%= button_tag( :class => "btn btn-primary w-100") do %>
            <i class="fas fa-comment-dots"></i> Comment
        <% end %>

        <%end%>
      </div>
    </div>
  </div>
</div>
</div>
                <hr/>
				<ul class="comments">    
				      <% @comments.each do |comment| %>
              <%= image_tag user_avatar(comment.user),class:"avatar" %>
              <li class="clearfix">
             
              <div class="post-comments border">
               <p class="meta"><%= comment.created_at.strftime("Commented on %m/%d/%Y") %> by <%= link_to comment.user.username, comment_user_path(comment, comment.user) %></p>
                  <p><%= comment.text %></p>
              </div>
				</li>

              <%end%>
				</ul>
			</div>
		</div></div>
   </div>


