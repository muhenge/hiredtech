<h1>Public#index</h1>
<p>Find me in app/views/public/index.html.erb</p>

<% if user_signed_in? %>
  <%= current_user.username %>
  <%= current_user.career.field %>
  <% @user_skills.each do |skills| %>
    <%= skills.name %>
    <%= skills.level %>
  <%end%>
  <%= link_to  "Logout", destroy_user_session_path %>
  <%= link_to  "Edit profile", edit_user_registration_path %>
<% else %>
  <%= link_to  "Connect", new_user_registration_path %>
<% end %>
 <%= form_with model: [@skill], local: true do |f| %>
      <%= f.text_field :name %> <%= f.number_field :level %>
      <%= f.submit "Add skills"%>
    <%end%>
  </div>
